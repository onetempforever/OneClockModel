<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <android.support.design.widget.TabLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            fresco:tabSelectedTextColor="@color/colorTextXuan"
            fresco:tabIndicatorColor="@color/colorTextXuan"
            fresco:tabIndicatorHeight="4dp"

            android:id="@+id/tablayout"></android.support.design.widget.TabLayout>
        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/tabpager"></android.support.v4.view.ViewPager>


    </LinearLayout>
</LinearLayout>
